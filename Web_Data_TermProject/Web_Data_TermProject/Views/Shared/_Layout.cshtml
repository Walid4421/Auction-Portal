

<!DOCTYPE html>
<html>
<head>

    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IKU Computer Engineering</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="logo"><a href="@Url.Action("Index", "Home")"><img src="~/images/logo.jpg" height="50" class="center" /></a></div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">


                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Todays Auctions", "Todays_Auctions", "Auctions")</li>
                  
                    


                </ul>
                @if (Session["Email"] == null)
                {
                    <div class="topnav">
                        <div class="login-container">

                            <img src="~/images/aaa.png" height="50" onclick="location.href='@Url.Action("Login", "Account")'" />


                        </div>

                    </div>
                }
                else if ((string)Session["Email"] == "Admin")
                {
                    <div class="topnav">
                        <div class="login-container">


                            <img src="~/images/aaa.png" height="50" onclick="location.href='@Url.Action("Admins", "Admins")'" />
                            <img src="~/images/notification-icon-11.png" height="25" onclick="location.href='@Url.Action("notifications", "notifications")'" />
                            @Html.ActionLink("Logout", "Logout", "Account", null, null)
                        </div>

                    </div>
                }
                else
                {
                    <div class="topnav">
                        <div class="login-container">

                            <img src="~/images/aaa.png" height="50" onclick="location.href='@Url.Action("UserPage", "Account")'" />
                            @Html.ActionLink("Logout", "Logout", "Account", null, null)

                        </div>

                    </div>

                }
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer style="text-align: center; background-color: #363636; ">
            
                <p>
<br />
                </p>
                <img src="~/images/Screenshot (42).png" />
                
                    <div class="col-xs-12 col-sm-12  text-center pad0" style="background-color: #363636; color: white; ">
                        <p>&copy; @DateTime.Now.Year - IKU Computer Engineering</p>
                    </div>
            
        </footer>
    </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
