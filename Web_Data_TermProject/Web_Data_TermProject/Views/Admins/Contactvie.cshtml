@model IEnumerable<Web_Data_TermProject.Models.Contact>

@{
    ViewBag.Title = "Contactvie";
}
<body style="background-image: url('../../images/animated-lines-on-gray-background-element_4yuscfqex__F0000.png');">
    <h2>Messages</h2>

        <table class="table" style="background-color:aliceblue">
            <tr>
                <th>
                    <h3><b>Name</b></h3>
                </th>
                <th>
                    <h3><b>Email</b></h3>
                </th>
                <th>
                    <h3><b>Message</b></h3>
                </th>
                <th></th>
            </tr>
            @if ((string)Session["Email"] == "Admin")
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.message)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete_m", new { id = item.messageid })
                        </td>
                    </tr>
                }

            }

        </table>

        <a href="javascript:history.back()" style="color:black">Go Back</a>
    </body>
